<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:minWidth="@dimen/textDialogMinWidth"
             android:padding="@dimen/paddingMedium"
    >

    <TextView
        android:id="@+id/textDialogMessageTextView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/margin"
        android:maxWidth="@dimen/textDialogMaxWidth"
        android:textColor="@color/textDialogTextColor"
        android:textSize="@dimen/textDialogTextSize"
        android:paddingBottom="@dimen/paddingVerySmall"
        />

</FrameLayout>